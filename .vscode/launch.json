{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Attach/Launch",
      "configurations": ["SF","Attach:Firefox"]
    }
    ],
  "configurations": [
    {
      "name": "Attach:Firefox",
      "type": "firefox",
      "request": "attach"
    },
    {
      "name": "SF",
      "type": "firefox",
      "request": "launch",
      "clearConsoleOnReload": true,
      "reAttach": false,
      "reloadOnAttach": true,
      "url": "https://pornhub.com/",
      "addonPath": "${workspaceFolder}\\tests\\firefox",
      "reloadOnChange": {
        "watch": [
          "${workspaceFolder}/src/**"
        ],
        "ignore": [
          "${workspaceFolder}/node_modules/**"
        ]
      },
      "pathMappings": [
        {
          "url": "moz-extension://a1715261-6d13-462e-b10e-1d4f4f2cf103",
          "path": "${workspaceFolder}/src"
        },
        {
          "url": "webpack:///js",
          "path": "${workspaceFolder}/src/js"
        },
        {
          "url": "webpack:///src/",
          "path": "${webRoot}/src/"
        }
      ],
      "log": {
        "fileName": "${workspaceFolder}/log.txt",
        "fileLevel": {
          "default": "Debug"
        }
      }
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to browser",
      "port": 9222
    },
    {
      "name": "SC",
      "type": "chrome",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}\\chrome\\bin\\chrome.exe",
      "userDataDir": "${workspaceFolder}/chrome/profile",
      "url": "https://pornhub.com/"
    }
  ]
}
