{
    "version": "0.2.0",
    "compounds": [
        {
          "name": "Attach/Launch",
          "configurations": ["Attach:Firefox", "Start:Firefox"]
        }
      ],
    "configurations": [
        {
            "name": "Attach:Firefox",
            "type": "firefox",
            "request": "attach",
        },
        {
            "name": "Start:Firefox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "reloadOnAttach": true,
            "reloadOnChange": ["${workspaceFolder}/css/mod.css","${workspaceFolder}/js/*.js"],
            "keepProfileChanges": false,
            "clearConsoleOnReload": true,
            "addonPath": "${workspaceFolder}\\src"
        },
        {
          "name": "SF",
          "type": "firefox",
          "request": "launch",
          "reAttach": true,
          "reloadOnAttach": true,
          "reloadOnChange": ["${workspaceFolder}/css/mod.css","${workspaceFolder}/js/*.js"],
          "keepProfileChanges": false,
          "clearConsoleOnReload": true,
          "addonPath": "${workspaceFolder}\\dist"
      }
    ]
}
