{
    "version": "0.2.0",
    "compounds": [
        {
          "name": "Attach/Launch",
          "configurations": ["Attach:Firefox", "Start:Firefox"]
        }
      ],
    "configurations": [
        {
            "name": "Attach:Firefox",
            "type": "firefox",
            "request": "attach",
        },
        {
            "name": "Start:Firefox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "reloadOnAttach": true,
            "reloadOnChange": ["${workspaceFolder}/css/mod.css","${workspaceFolder}/js/*.js"],
            "keepProfileChanges": true,
            "clearConsoleOnReload": true,
            "addonPath": "${workspaceFolder}\\src"
        },
        {
            "name": "PH Site",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "reloadOnAttach": true,
            "clearConsoleOnReload": false,
            "keepProfileChanges": false,
            "addonPath": "${workspaceFolder}\\src",
            "internalConsoleOptions": "openOnFirstSessionStart",
            "url": "https://www.pornhub.com",
            "webRoot": "https://www.pornhub.com/"
        }
    ]
}
