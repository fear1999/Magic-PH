{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Attach/Launch",
      "configurations": ["SF","Attach:Firefox"]
    }
    ],
  "configurations": [
    {
      "name": "Attach:Firefox",
      "type": "firefox",
      "request": "attach"
    },
    {
      "name": "SF",
      "type": "firefox",
      "request": "launch",
      "clearConsoleOnReload": true,
      "reAttach": true,
      "reloadOnAttach": true,
      "reloadOnChange": "${workspaceFolder}/src/js/**",
      "url": "https://pornhub.com/",
      "addonPath": "${workspaceFolder}\\tests\\firefox",
      "pathMappings": [
        {
          "url": "webpack:///js",
          "path": "${workspaceFolder}/src/js"
        }
      ]
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to browser",
      "port": 9222
    },
    {
      "name": "SC",
      "type": "chrome",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}\\chrome\\bin\\chrome.exe",
      "userDataDir": "${workspaceFolder}/chrome/profile",
      "url": "https://pornhub.com/"
    }
  ]
}
