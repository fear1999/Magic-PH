{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Attach/Launch",
      "configurations": ["SF","Attach:Firefox"]
    }
    ],
  "configurations": [
    {
      "name": "Attach:Firefox",
      "type": "firefox",
      "request": "attach",
    },
    {
      "name": "SF",
      "type": "firefox",
      "request": "launch",
      "clearConsoleOnReload": true,
      "profile": "debug",
      "keepProfileChanges": false,
      "reAttach": true,
      "reloadOnAttach": true,
      "reloadOnChange": {
        "watch": "${workspaceFolder}/src/**",
        "ignore": "**/node_modules/**"
      },
      "url": "https://pornhub.com/",
      "addonPath": "${workspaceFolder}\\dist"
    },
    {
      "type": "pwa-chrome",
      "request": "attach",
      "name": "Attach to browser",
      "port": 9222
    },
    {
      "name": "SC",
      "type": "pwa-chrome",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}\\chrome\\bin\\chrome.exe",
      "userDataDir": "${workspaceFolder}/chrome/profile",
      "url": "https://pornhub.com/"
    }
  ]
}
