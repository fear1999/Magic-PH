{
  "name": "magicph",
  "productName": "MagicPH",
  "description": "Enhances adult viewing experience. Clean, easy, simple, and quick.",
  "author": "Magic <magicoflolis@tuta.io>",
  "license": "GPL-3.0-only",
  "version": "2.0.0rc3",
  "homepage": "https://github.com/magicoflolis/Magic-PH",
  "bugs": {
    "url": "https://github.com/magicoflolis/Magic-PH/issues"
  },
  "scripts": {
    "Dev:FF": "concurrently \"npm run Webpack:FF\" \"npm run Dev:Sass\"",
    "Dev:Cr": "concurrently \"npm run Webpack:Cr\" \"npm run Dev:Sass\"",
    "Dev:Userscript": "npm --prefix ./userscript run dev",
    "Dev:Sass": "sass -w ./src/sass/magicph.scss:./tests/compiled/magicph.css ./src/sass/downloader.scss:./tests/compiled/downloader.css ./src/sass/plyr/plyr.scss:./tests/compiled/plyr.css -s compressed",
    "web-run:firefox-android": "web-ext run --config=./tools/web-ext-firefox.js -t firefox-android --firefox-apk org.mozilla.firefox",
    "Webpack:FF": "webpack --progress --mode development --config=webpackConfig/webpack.config.js --node-env firefox",
    "Webpack:Cr": "webpack --progress --mode development --config=webpackConfig/webpack.config.js --node-env chrome",
    "build:Firefox": "webpack --mode production --config=webpackConfig/webpack.config.js --node-env firefox",
    "build:Chrome": "webpack --mode production --config=webpackConfig/webpack.config.js --node-env chrome",
    "build:Userscript": "npm --prefix ./userscript run pub:Userscript",
    "build:Crx": "node tools/crx.js",
    "build:Browsers": "npm run build:Firefox && npm run build:Chrome && npm run build:Crx"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.0",
    "@types/chrome": "^0.0.196",
    "@types/firefox-webext-browser": "latest",
    "@types/path-browserify": "^1.0.0",
    "@types/sass": "^1.43.1",
    "browserslist": "^4.21.3",
    "concurrently": "^7.4.0",
    "crx3": "^1.1.3",
    "css-loader": "^6.7.1",
    "mini-css-extract-plugin": "^2.6.1",
    "sass": "^1.54.9",
    "sass-loader": "^13.0.2",
    "autoprefixer": "^10.4.8",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv": "^16.0.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "path-browserify": "^1.0.1",
    "swc-loader": "^0.2.3",
    "terser-webpack-plugin": "^5.3.6",
    "web-ext": "^7.2.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magicoflolis/Magic-PH.git"
  }
}
