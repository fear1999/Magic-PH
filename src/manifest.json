{
  "name": "MagicPH",
  "description": "Enhanced PornHub",
  "author": "Magic of Lolis",
  "homepage_url": "https://github.com/magicoflolis/Magic-PH",
  "version": "0.0.2",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": {
      "16": "img/icon_16.png",
      "32": "img/icon_32.png"
    },
    "default_popup": "options.html",
    "default_title": "Magic PH"
  },
  "options_ui": {
    "browser_style": false,
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "magicph@magicoflolis.com",
      "strict_min_version": "55.0"
    }
  },
  "content_scripts": [
    {
      "all_frames": true,
      "css": ["/css/mod.css"],
      "js": ["/js/magicinject.js"],
      "matches": ["https://*.pornhub.com/*", "https://*.pornhubpremium.com/*"],
      "exclude_matches": [
        "https://www.pornhub.com/login",
        "https://www.pornhub.com/create_account_select",
        "https://www.pornhub.com/user/edit",
        "https://www.pornhubpremium.com/user/edit",
        "https://www.pornhubpremium.com/gift",
        "https://www.pornhubpremium.com/login",
        "https://www.pornhubpremium.com/create_account_select"
      ],
      "run_at": "document_start"
    },
    {
      "all_frames": true,
      "js": ["/js/sync.js"],
      "matches": ["https://*.pornhub.com/*", "https://*.pornhubpremium.com/*"],
      "exclude_matches": [
        "https://www.pornhub.com/login",
        "https://www.pornhub.com/create_account_select",
        "https://www.pornhub.com/user/edit",
        "https://www.pornhubpremium.com/user/edit",
        "https://www.pornhubpremium.com/gift",
        "https://www.pornhubpremium.com/login",
        "https://www.pornhubpremium.com/create_account_select"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "icons": {
    "128": "img/icon_128.png"
  },
  "manifest_version": 2,
  "permissions": [
    "menus",
    "tabs",
    "storage",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "web_accessible_resources": ["js/*", "libs/*"],
  "commands": {}
}
