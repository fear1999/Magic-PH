{
	"manifest_version": 2,
  "name": "MagicPH",
  "short_name": "MagPH",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "browser_style": false,
    "default_icon": {
			"64": "img/icon_64.png",
      "128": "img/icon_128.png"
    },
    "default_popup": "options.html",
    "default_title": "MagicPH - Popup"
  },
  "options_ui": {
    "browser_style": false,
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "all_frames": true,
      "css": ["/css/magicph.css"],
      "js": ["/js/start.js","/js/injector.js"],
      "matches": ["https://*.pornhub.com/*", "https://*.pornhubpremium.com/*"],
      "exclude_matches": [
        "https://www.pornhub.com/login",
        "https://www.pornhub.com/create_account_select",
        "https://www.pornhubpremium.com/login",
        "https://www.pornhubpremium.com/create_account_select",
        "https://www.pornhubpremium.com/gift"
      ],
      "run_at": "document_start"
    },
		{
      "all_frames": true,
      "css": ["/css/magicph.css"],
      "js": ["/js/favorites.js"],
      "matches": ["https://*.pornhub.com/magicph-favorites", "https://*.pornhubpremium.com/magicph-favorites"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "64": "img/icon_64.png",
    "128": "img/icon_128.png"
  },
  "permissions": [
    "cookies",
		"webNavigation",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "tabs",
    "storage",
    "unlimitedStorage",
    "*://static.trafficjunky.com/*",
    "*://*.phncdn.com/*",
    "*://*.pornhub.com/*",
    "*://*.pornhubpremium.com/*"
  ],
  "storage": {
    "managed_schema": "managed_storage.json"
  },
  "web_accessible_resources": ["/web_accessible_resources/*", "js/*", "css/plyr.css"],
  "commands": {},
  "browser_specific_settings": {
    "gecko": {
      "id": "magicph@magicoflolis.com",
      "update_url": "https://raw.githubusercontent.com/magicoflolis/Magic-PH/master/version/updates.json"
    }
  }
}
