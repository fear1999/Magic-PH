{
	"manifest_version": 2,
  "name": "MagicPH",
  "short_name": "MagPH",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": {
			"64": "img/icon_64.png",
      "128": "img/icon_128.png"
    },
    "default_popup": "options.html",
    "default_title": "MagicPH - Popup"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "all_frames": true,
      "css": ["/css/magicph.css","/css/downloader.css"],
      "js": ["/js/start.js","/js/injector.js"],
      "matches": [
			"https://*.pornhub.com/*",
			"https://*.pornhubpremium.com/*",
			"https://*.youporn.com/*",
			"https://*.youpornpremium.com/*",
			"https://*.youporngay.com/*",
			"https://*.redtube.com/*",
			"https://*.redtubepremium.com/*",
			"https://*.tube8.com/*",
			"https://*.thumbzilla.com/*",
      "https://onlyfans.com/*"
			],
      "exclude_matches": [
        "https://www.pornhub.com/login",
        "https://www.pornhub.com/create_account_select",
        "https://www.pornhubpremium.com/login",
        "https://www.pornhubpremium.com/create_account_select",
        "https://www.pornhubpremium.com/gift"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "64": "img/icon_64.png",
    "128": "img/icon_128.png"
  },
  "permissions": [
    "cookies",
		"webNavigation",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "tabs",
    "storage",
    "unlimitedStorage",
    "*://*.trafficjunky.com/*",
    "*://*.phncdn.com/*",
    "*://*.pornhub.com/*",
		"*://*.pornhubpremium.com/*",
		"*://*.youporn.com/*",
		"*://*.youpornpremium.com/*",
		"*://*.youporngay.com/*",
		"*://*.redtube.com/*",
		"*://*.redtubepremium.com/*",
		"*://*.tube8.com/*",
		"*://*.thumbzilla.com/*",
    "*://onlyfans.com/*"
  ],
  "web_accessible_resources": ["/web_accessible_resources/*", "js/*", "css/plyr.css"],
  "commands": {},
  "key": "",
  "update_url": "https://raw.githubusercontent.com/magicoflolis/Magic-PH/master/version/updates.xml"
}
